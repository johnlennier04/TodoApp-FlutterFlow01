{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task",
  "description": "Schema for task documents",
  "type": "object",
  "properties": {
    "title": {
      "description": "The title of the task",
      "type": "string",
      "minLength": 1
    },
    "details": {
      "description": "The details or description of the task",
      "type": "string",
      "minLength": 1
    },
    "completed": {
      "description": "Indicates whether the task has been completed",
      "type": "boolean",
      "default": false
    },
    "created": {
      "description": "The date and time when the task was created",
      "type": "string",
      "format": "date-time"
    },
    "user": {
      "description": "The unique identifier (UID) of the user who created the task",
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["title", "completed", "created", "user"],
  "additionalProperties": false
}
